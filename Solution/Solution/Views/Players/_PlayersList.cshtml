@model IEnumerable<Solution.Models.Players.PlayerViewModel>
@{
    Layout = null;
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr> 
        <th>Actions</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    @foreach (var item in Model) {    
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit",new { id = item.Id })
                @Ajax.ActionLink("Delete", "Delete", new { id = item.Id },
                                 new AjaxOptions { Confirm = "Delete Category?", HttpMethod = "Post", 
                                     UpdateTargetId = "divCategoryList" })              
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Email
            </td>
        </tr>
    
    }
</table>
